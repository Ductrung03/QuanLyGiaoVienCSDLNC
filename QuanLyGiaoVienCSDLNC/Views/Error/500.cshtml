@{
    ViewData["Title"] = "Lỗi server";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="error-page">
                            <div class="error-number">
                                <h1>500</h1>
                            </div>
                            <div class="error-description">
                                <h5>Lỗi máy chủ nội bộ</h5>
                                <p>Xin lỗi, có lỗi xảy ra trên máy chủ. Vui lòng thử lại sau.</p>
                            </div>
                            <div class="error-actions">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                                    <i data-feather="home"></i> Về trang chủ
                                </a>
                                <button onclick="location.reload()" class="btn btn-outline-secondary">
                                    <i data-feather="refresh-ccw"></i> Thử lại
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
