@model QuanLyGiaoVienCSDLNC.Models.BoMon
@{
    ViewData["Title"] = "Xóa bộ môn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Xóa bộ môn</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item"><a asp-controller="BoMon" asp-action="Index">Quản lý bộ môn</a></li>
                        <li class="breadcrumb-item active">Xóa</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Xác nhận xóa bộ môn</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">Cảnh báo!</h4>
                            <p>Bạn có chắc chắn muốn xóa bộ môn này không? Hành động này không thể hoàn tác.</p>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã bộ môn</label>
                                    <input type="text" class="form-control" value="@Model.MaBM" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên bộ môn</label>
                                    <input type="text" class="form-control" value="@Model.TenBM" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Khoa</label>
                                    <input type="text" class="form-control" value="@Model.Khoa?.TenKhoa" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Địa chỉ</label>
                                    <input type="text" class="form-control" value="@Model.DiaChi" readonly />
                                </div>
                            </div>
                        </div>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="MaBM" />
                            <div class="card-footer text-end">
                                <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>