@model QuanLyGiaoVienCSDLNC.Models.BoMon
@{
    ViewData["Title"] = "Chi tiết bộ môn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Chi tiết bộ môn</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item"><a asp-controller="BoMon" asp-action="Index">Quản lý bộ môn</a></li>
                        <li class="breadcrumb-item active">Chi tiết</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Thông tin bộ môn</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã bộ môn</label>
                                    <input type="text" class="form-control" value="@Model.MaBM" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên bộ môn</label>
                                    <input type="text" class="form-control" value="@Model.TenBM" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Khoa</label>
                                    <input type="text" class="form-control" value="@Model.Khoa?.TenKhoa" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Địa chỉ</label>
                                    <input type="text" class="form-control" value="@Model.DiaChi" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Chủ nhiệm bộ môn</label>
                                    <input type="text" class="form-control" value="@Model.MaChuNhiemBM" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <a asp-action="Edit" asp-route-id="@Model.MaBM" class="btn btn-primary">Chỉnh sửa</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>