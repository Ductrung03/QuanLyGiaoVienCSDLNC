@model QuanLyGiaoVienCSDLNC.Models.BoMon
@{
    ViewData["Title"] = "Chỉnh sửa bộ môn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Chỉnh sửa bộ môn</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item"><a asp-controller="BoMon" asp-action="Index">Quản lý bộ môn</a></li>
                        <li class="breadcrumb-item active">Chỉnh sửa</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Thông tin bộ môn</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MaBM" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="MaBM" class="form-label">Mã bộ môn</label>
                                        <input asp-for="MaBM" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="TenBM" class="form-label">Tên bộ môn</label>
                                        <input asp-for="TenBM" class="form-control" />
                                        <span asp-validation-for="TenBM" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="MaKhoa" class="form-label">Khoa</label>
                                        <select asp-for="MaKhoa" class="form-select" asp-items="ViewBag.Khoas">
                                            <option value="">-- Chọn khoa --</option>
                                        </select>
                                        <span asp-validation-for="MaKhoa" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                                        <input asp-for="DiaChi" class="form-control" />
                                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="MaChuNhiemBM" class="form-label">Chủ nhiệm bộ môn</label>
                                        <select asp-for="MaChuNhiemBM" class="form-select" asp-items="ViewBag.GiaoViens">
                                            <option value="">-- Chọn chủ nhiệm --</option>
                                        </select>
                                        <span asp-validation-for="MaChuNhiemBM" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Script {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}