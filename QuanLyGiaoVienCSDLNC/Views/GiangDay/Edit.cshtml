@model QuanLyGiaoVienCSDLNC.Models.TaiGiangDay
@{
    ViewData["Title"] = "Chỉnh sửa tải giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Chỉnh sửa tải giảng dạy</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Index">Quản lý giảng dạy</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Details" asp-route-id="@Model.MaTaiGiangDay">Chi tiết</a>
                        </li>
                        <li class="breadcrumb-item active">Chỉnh sửa</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i data-feather="alert-circle"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="card">
                    <div class="card-header bg-warning">
                        <h5 class="text-white mb-0">
                            <i data-feather="edit" class="me-2"></i>Chỉnh sửa thông tin tải giảng dạy
                        </h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="MaTaiGiangDay" />

                            <!-- Mã tải GD (readonly) -->
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Mã tải giảng dạy</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i data-feather="hash"></i>
                                        </span>
                                        <input type="text" class="form-control bg-light"
                                               value="@Model.MaTaiGiangDay" readonly>
                                    </div>
                                    <small class="form-text text-muted">Mã tải giảng dạy không thể thay đổi</small>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="TenHocPhan" class="form-label">Tên học phần <span class="text-danger">*</span></label>
                                        <input asp-for="TenHocPhan" class="form-control" placeholder="Nhập tên học phần" required />
                                        <span asp-validation-for="TenHocPhan" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập tên học phần.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="Lop" class="form-label">Lớp <span class="text-danger">*</span></label>
                                        <input asp-for="Lop" class="form-control" placeholder="VD: CT101" required />
                                        <span asp-validation-for="Lop" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập lớp.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="NamHoc" class="form-label">Năm học <span class="text-danger">*</span></label>
                                        <input asp-for="NamHoc" class="form-control" placeholder="VD: 2023-2024" required />
                                        <span asp-validation-for="NamHoc" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập năm học.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="He" class="form-label">Hệ đào tạo <span class="text-danger">*</span></label>
                                        <select asp-for="He" class="form-select" required>
                                            <option value="">-- Chọn hệ đào tạo --</option>
                                            <option value="Đại học chính quy">Đại học chính quy</option>
                                            <option value="Đại học liên thông">Đại học liên thông</option>
                                            <option value="Thạc sĩ">Thạc sĩ</option>
                                            <option value="Tiến sĩ">Tiến sĩ</option>
                                        </select>
                                        <span asp-validation-for="He" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Vui lòng chọn hệ đào tạo.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="SiSo" class="form-label">Sĩ số <span class="text-danger">*</span></label>
                                        <input asp-for="SiSo" class="form-control" type="number" min="1" max="500" required />
                                        <span asp-validation-for="SiSo" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Sĩ số phải từ 1 đến 500.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="SoTinChi" class="form-label">Số tín chỉ <span class="text-danger">*</span></label>
                                        <input asp-for="SoTinChi" class="form-control" type="number" min="1" max="10" required />
                                        <span asp-validation-for="SoTinChi" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Số tín chỉ phải từ 1 đến 10.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="MaDoiTuong" class="form-label">Đối tượng giảng dạy <span class="text-danger">*</span></label>
                                        <select asp-for="MaDoiTuong" class="form-select" asp-items="ViewBag.DoiTuongs" required>
                                            <option value="">-- Chọn đối tượng --</option>
                                        </select>
                                        <span asp-validation-for="MaDoiTuong" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Vui lòng chọn đối tượng giảng dạy.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="MaThoiGian" class="form-label">Thời gian giảng dạy <span class="text-danger">*</span></label>
                                        <select asp-for="MaThoiGian" class="form-select" asp-items="ViewBag.ThoiGians" required>
                                            <option value="">-- Chọn thời gian --</option>
                                        </select>
                                        <span asp-validation-for="MaThoiGian" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Vui lòng chọn thời gian giảng dạy.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="MaNgonNgu" class="form-label">Ngôn ngữ giảng dạy <span class="text-danger">*</span></label>
                                        <select asp-for="MaNgonNgu" class="form-select" asp-items="ViewBag.NgonNgus" required>
                                            <option value="">-- Chọn ngôn ngữ --</option>
                                        </select>
                                        <span asp-validation-for="MaNgonNgu" class="text-danger"></span>
                                        <div class="invalid-feedback">
                                            Vui lòng chọn ngôn ngữ giảng dạy.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                                        <input asp-for="GhiChu" class="form-control" placeholder="Ghi chú thêm..." />
                                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <hr>

                            <!-- Warning if has assignments -->
                            @if (Model.SoGiaoVienPhanCong > 0)
                            {
                                <div class="alert alert-warning">
                                    <h6><i data-feather="alert-triangle"></i> Lưu ý quan trọng</h6>
                                    <p class="mb-0">
                                        Tải giảng dạy này đã có <strong>@Model.SoGiaoVienPhanCong giáo viên</strong> được phân công.
                                        Việc thay đổi thông tin có thể ảnh hưởng đến việc tính toán giờ quy đổi và phân công giảng dạy.
                                    </p>
                                </div>
                            }

                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <a asp-action="Details" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-secondary">
                                                <i data-feather="arrow-left"></i> Quay lại chi tiết
                                            </a>
                                            <a asp-action="Index" class="btn btn-outline-secondary">
                                                <i data-feather="list"></i> Danh sách
                                            </a>
                                        </div>
                                        <div>
                                            <button type="reset" class="btn btn-warning me-2">
                                                <i data-feather="refresh-cw"></i> Khôi phục
                                            </button>
                                            <button type="submit" class="btn btn-success">
                                                <i data-feather="save"></i> Cập nhật
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cảnh báo quan trọng -->
        <div class="row justify-content-center mt-3">
            <div class="col-xl-10 col-lg-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0">
                            <i data-feather="alert-triangle" class="me-2"></i>Lưu ý khi chỉnh sửa
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Thay đổi thông tin cơ bản:</h6>
                                <ul class="list-unstyled text-muted">
                                    <li>• Tên học phần: Kiểm tra tính chính xác</li>
                                    <li>• Lớp và năm học: Đảm bảo khớp với kế hoạch</li>
                                    <li>• Sĩ số: Phù hợp với thực tế lớp học</li>
                                    <li>• Số tín chỉ: Theo quy định chương trình</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6>Ảnh hưởng đến phân công:</h6>
                                <ul class="list-unstyled text-muted">
                                    <li>• Thay đổi có thể ảnh hưởng giờ quy đổi</li>
                                    <li>• Cần thông báo cho giáo viên được phân công</li>
                                    <li>• Kiểm tra lại tính phù hợp của phân công</li>
                                    <li>• Cập nhật thông tin trên hệ thống khác</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Initialize feather icons
            feather.replace();

            // Form validation
            const form = document.querySelector('.needs-validation');
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Store original values for reset functionality
            const originalValues = {
                tenHocPhan: $('#TenHocPhan').val(),
                lop: $('#Lop').val(),
                namHoc: $('#NamHoc').val(),
                he: $('#He').val(),
                siSo: $('#SiSo').val(),
                soTinChi: $('#SoTinChi').val(),
                maDoiTuong: $('#MaDoiTuong').val(),
                maThoiGian: $('#MaThoiGian').val(),
                maNgonNgu: $('#MaNgonNgu').val(),
                ghiChu: $('#GhiChu').val()
            };

            // Custom reset functionality
            $('button[type="reset"]').click(function(e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Khôi phục dữ liệu?',
                    text: 'Bạn có muốn khôi phục về dữ liệu ban đầu không?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Khôi phục',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Restore original values
                        $('#TenHocPhan').val(originalValues.tenHocPhan);
                        $('#Lop').val(originalValues.lop);
                        $('#NamHoc').val(originalValues.namHoc);
                        $('#He').val(originalValues.he);
                        $('#SiSo').val(originalValues.siSo);
                        $('#SoTinChi').val(originalValues.soTinChi);
                        $('#MaDoiTuong').val(originalValues.maDoiTuong);
                        $('#MaThoiGian').val(originalValues.maThoiGian);
                        $('#MaNgonNgu').val(originalValues.maNgonNgu);
                        $('#GhiChu').val(originalValues.ghiChu);

                        // Remove validation classes
                        form.classList.remove('was-validated');

                        TM.utils.showNotification('Đã khôi phục dữ liệu ban đầu', 'success');
                    }
                });
            });

            // Real-time validation
            $('input, select').on('blur change', function() {
                if ($(this).attr('required')) {
                    if ($(this).val()) {
                        $(this).removeClass('is-invalid').addClass('is-valid');
                    } else {
                        $(this).removeClass('is-valid').addClass('is-invalid');
                    }
                }
            });

            // Warn when changing critical fields
            $('#SiSo, #SoTinChi').on('change', function() {
                var fieldName = $(this).attr('id') === 'SiSo' ? 'sĩ số' : 'số tín chỉ';
                if ($(this).val() !== originalValues[$(this).attr('id').toLowerCase()]) {
                    TM.utils.showNotification(
                        `Thay đổi ${fieldName} có thể ảnh hưởng đến tính toán giờ quy đổi!`,
                        'warning'
                    );
                }
            });

            // Confirm before leaving if form is dirty
            var formChanged = false;
            $('input, select, textarea').on('change', function() {
                formChanged = true;
            });

            $(window).on('beforeunload', function() {
                if (formChanged) {
                    return 'Bạn có thay đổi chưa được lưu. Bạn có chắc chắn muốn rời khỏi trang?';
                }
            });

            $('form').on('submit', function() {
                formChanged = false;
            });

            // Auto-focus first input
            $('#TenHocPhan').focus();
        });
    </script>
}