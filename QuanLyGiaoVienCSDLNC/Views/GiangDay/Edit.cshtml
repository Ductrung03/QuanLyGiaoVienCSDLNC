@model QuanLyGiaoVienCSDLNC.Models.TaiGiangDay
@{
    ViewData["Title"] = "Chi tiết tải giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var chiTietGiangDay = ViewBag.ChiTietGiangDay as List<QuanLyGiaoVienCSDLNC.Models.ChiTietGiangDay> ?? new List<QuanLyGiaoVienCSDLNC.Models.ChiTietGiangDay>();
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Chi tiết tải giảng dạy</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item"><a asp-controller="GiangDay" asp-action="Index">Quản lý giảng dạy</a></li>
                        <li class="breadcrumb-item active">Chi tiết</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <!-- Thông tin tải giảng dạy -->
            <div class="col-xl-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Thông tin tải giảng dạy</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã tải giảng dạy</label>
                                    <input type="text" class="form-control" value="@Model.MaTaiGiangDay" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên học phần</label>
                                    <input type="text" class="form-control" value="@Model.TenHocPhan" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Sĩ số</label>
                                    <input type="text" class="form-control" value="@Model.SiSo" readonly />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Hệ</label>
                                    <input type="text" class="form-control" value="@Model.He" readonly />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Lớp</label>
                                    <input type="text" class="form-control" value="@Model.Lop" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Số tín chỉ</label>
                                    <input type="text" class="form-control" value="@Model.SoTinChi" readonly />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Năm học</label>
                                    <input type="text" class="form-control" value="@Model.NamHoc" readonly />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Mã đối tượng</label>
                                    <input type="text" class="form-control" value="@Model.MaDoiTuong" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Mã thời gian</label>
                                    <input type="text" class="form-control" value="@Model.MaThoiGian" readonly />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Mã ngôn ngữ</label>
                                    <input type="text" class="form-control" value="@Model.MaNgonNgu" readonly />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Ghi chú</label>
                                    <textarea class="form-control" rows="3" readonly>@Model.GhiChu</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <a asp-action="PhanCong" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-warning">
                            <i data-feather="user-plus"></i> Phân công giảng dạy
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-primary">
                            <i data-feather="edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i data-feather="arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>

            <!-- Thống kê nhanh -->
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Thống kê nhanh</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Số giáo viên được phân công:</span>
                                <strong class="text-primary">@chiTietGiangDay.Count</strong>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Tổng số tiết:</span>
                                <strong class="text-success">@chiTietGiangDay.Sum(x => x.SoTiet)</strong>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Tổng số tiết quy đổi:</span>
                                <strong class="text-info">@chiTietGiangDay.Sum(x => x.SoTietQuyDoi).ToString("F2")</strong>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Trạng thái:</span>
                                @if (chiTietGiangDay.Any())
                                {
                                    <span class="badge bg-success">Đã phân công</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Chưa phân công</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="card">
                    <div class="card-header">
                        <h5>Hành động nhanh</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="PhanCong" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-warning">
                                <i data-feather="user-plus"></i> Phân công thêm GV
                            </a>
                            <button type="button" class="btn btn-info" onclick="exportToExcel()">
                                <i data-feather="download"></i> Xuất Excel
                            </button>
                            <button type="button" class="btn btn-secondary" onclick="copyTaiGiangDay()">
                                <i data-feather="copy"></i> Sao chép tải GD
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách giáo viên được phân công -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Danh sách giáo viên được phân công</h5>
                    </div>
                    <div class="card-body">
                        @if (chiTietGiangDay.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Mã GV</th>
                                            <th>Họ tên</th>
                                            <th>Số tiết</th>
                                            <th>Số tiết quy đổi</th>
                                            <th>Ghi chú</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var stt = 1;
                                        }
                                        @foreach (var item in chiTietGiangDay)
                                        {
                                            <tr>
                                                <td>@stt</td>
                                                <td>
                                                    <span class="badge bg-info">@item.MaGV</span>
                                                </td>
                                                <td>
                                                    <div>
                                                        <h6 class="mb-0">@(item.GiaoVien?.HoTen ?? "N/A")</h6>
                                                        <small class="text-muted">@item.MaGV</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="fw-bold text-primary">@item.SoTiet</span>
                                                </td>
                                                <td>
                                                    <span class="fw-bold text-success">@item.SoTietQuyDoi.ToString("F2")</span>
                                                </td>
                                                <td>
                                                    <small>@item.GhiChu</small>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <button type="button" class="btn btn-primary btn-sm"
                                                                onclick="editChiTiet('@item.MaChiTietGiangDay')" title="Chỉnh sửa">
                                                            <i data-feather="edit-2"></i>
                                                        </button>
                                                        <form asp-action="XoaPhanCong" method="post" style="display: inline;">
                                                            <input type="hidden" name="maChiTietGiangDay" value="@item.MaChiTietGiangDay" />
                                                            <input type="hidden" name="maTaiGiangDay" value="@Model.MaTaiGiangDay" />
                                                            <button type="submit" class="btn btn-danger btn-sm"
                                                                    onclick="return confirm('Bạn có chắc chắn muốn xóa phân công này?')"
                                                                    title="Xóa phân công">
                                                                <i data-feather="trash-2"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                            stt++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i data-feather="user-x" size="48" class="text-muted mb-3"></i>
                                <h5>Chưa có giáo viên nào được phân công</h5>
                                <p class="text-muted">Hãy <a asp-action="PhanCong" asp-route-id="@Model.MaTaiGiangDay">phân công giáo viên</a> để bắt đầu giảng dạy.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

<!-- Modal for editing chi tiet giang day -->
<div class="modal fade" id="editChiTietModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa phân công</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editChiTietForm">
                    <input type="hidden" id="editMaChiTietGiangDay" />
                    <div class="mb-3">
                        <label for="editSoTiet" class="form-label">Số tiết</label>
                        <input type="number" class="form-control" id="editSoTiet" min="1" max="200" required />
                    </div>
                    <div class="mb-3">
                        <label for="editGhiChu" class="form-label">Ghi chú</label>
                        <textarea class="form-control" id="editGhiChu" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveChiTiet()">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>

