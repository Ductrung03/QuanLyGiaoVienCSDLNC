@model QuanLyGiaoVienCSDLNC.Models.TaiGiangDay
@{
    ViewData["Title"] = "Chỉnh sửa tải giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Chỉnh sửa tải giảng dạy</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Index">Quản lý giảng dạy</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Details" asp-route-id="@Model.MaTaiGiangDay">Chi tiết</a>
                        </li>
                        <li class="breadcrumb-item active">Chỉnh sửa</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i data-feather="alert-circle"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>Thông tin tải giảng dạy</h5>
                            <span class="badge bg-info">@Model.MaTaiGiangDay</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="MaTaiGiangDay" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="TenHocPhan" class="form-label">Tên học phần <span class="text-danger">*</span></label>
                                        <input asp-for="TenHocPhan" class="form-control" placeholder="Nhập tên học phần" />
                                        <span asp-validation-for="TenHocPhan" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="Lop" class="form-label">Lớp <span class="text-danger">*</span></label>
                                        <input asp-for="Lop" class="form-control" placeholder="VD: CT101" />
                                        <span asp-validation-for="Lop" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="NamHoc" class="form-label">Năm học <span class="text-danger">*</span></label>
                                        <input asp-for="NamHoc" class="form-control" placeholder="VD: 2023-2024" />
                                        <span asp-validation-for="NamHoc" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="He" class="form-label">Hệ đào tạo <span class="text-danger">*</span></label>
                                        <select asp-for="He" class="form-select">
                                            <option value="">-- Chọn hệ đào tạo --</option>
                                            <option value="Đại học chính quy">Đại học chính quy</option>
                                            <option value="Đại học liên thông">Đại học liên thông</option>
                                            <option value="Thạc sĩ">Thạc sĩ</option>
                                            <option value="Tiến sĩ">Tiến sĩ</option>
                                        </select>
                                        <span asp-validation-for="He" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="SiSo" class="form-label">Sĩ số <span class="text-danger">*</span></label>
                                        <input asp-for="SiSo" class="form-control" type="number" min="1" max="500" />
                                        <span asp-validation-for="SiSo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="SoTinChi" class="form-label">Số tín chỉ <span class="text-danger">*</span></label>
                                        <input asp-for="SoTinChi" class="form-control" type="number" min="1" max="10" />
                                        <span asp-validation-for="SoTinChi" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label asp-for="MaDoiTuong" class="form-label">Đối tượng giảng dạy <span class="text-danger">*</span></label>
                                        <select asp-for="MaDoiTuong" class="form-select" asp-items="ViewBag.DoiTuongs">
                                            <option value="">-- Chọn đối tượng --</option>
                                        </select>
                                        <span asp-validation-for="MaDoiTuong" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="MaThoiGian" class="form-label">Thời gian giảng dạy <span class="text-danger">*</span></label>
                                        <select asp-for="MaThoiGian" class="form-select" asp-items="ViewBag.ThoiGians">
                                            <option value="">-- Chọn thời gian --</option>
                                        </select>
                                        <span asp-validation-for="MaThoiGian" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="MaNgonNgu" class="form-label">Ngôn ngữ giảng dạy <span class="text-danger">*</span></label>
                                        <select asp-for="MaNgonNgu" class="form-select" asp-items="ViewBag.NgonNgus">
                                            <option value="">-- Chọn ngôn ngữ --</option>
                                        </select>
                                        <span asp-validation-for="MaNgonNgu" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                                        <input asp-for="GhiChu" class="form-control" placeholder="Ghi chú thêm..." />
                                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <hr>

                            <!-- Warning if has assignments -->
                            @if (Model.SoGiaoVienPhanCong > 0)
                            {
                                <div class="alert alert-warning">
                                    <i data-feather="alert-triangle"></i>
                                    <strong>Lưu ý:</strong> Tải giảng dạy này đã có @Model.SoGiaoVienPhanCong giáo viên được phân công.
                                    Việc thay đổi thông tin có thể ảnh hưởng đến việc tính toán giờ quy đổi.
                                </div>
                            }

                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <a asp-action="Details" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-secondary">
                                                <i data-feather="arrow-left"></i> Quay lại
                                            </a>
                                            <a asp-action="Index" class="btn btn-outline-secondary">
                                                <i data-feather="list"></i> Danh sách
                                            </a>
                                        </div>
                                        <div>
                                            <button type="reset" class="btn btn-warning me-2">
                                                <i data-feather="refresh-cw"></i> Khôi phục
                                            </button>
                                            <button type="submit" class="btn btn-success">
                                                <i data-feather="save"></i> Cập nhật
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Initialize feather icons
            feather.replace();

            // Form validation enhancement
            $('form').on('submit', function(e) {
                var isValid = true;

                // Check required fields
                $('input[required], select[required]').each(function() {
                    if (!$(this).val()) {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid').addClass('is-valid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    TM.utils.showNotification('Vui lòng điền đầy đủ thông tin bắt buộc!', 'error');
                }
            });

            // Real-time validation
            $('input, select').on('blur change', function() {
                if ($(this).attr('required')) {
                    if ($(this).val()) {
                        $(this).removeClass('is-invalid').addClass('is-valid');
                    } else {
                        $(this).removeClass('is-valid').addClass('is-invalid');
                    }
                }
            });

            // Confirm before leaving if form is dirty
            var formChanged = false;
            $('input, select, textarea').on('change', function() {
                formChanged = true;
            });

            $(window).on('beforeunload', function() {
                if (formChanged) {
                    return 'Bạn có thay đổi chưa được lưu. Bạn có chắc chắn muốn rời khỏi trang?';
                }
            });

            $('form').on('submit', function() {
                formChanged = false;
            });
        });
    </script>
}