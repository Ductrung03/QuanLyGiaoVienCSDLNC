            // Load data and show modal
            // $('#editChiTietModal').modal('show');
        }

        function saveChiTiet() {
            // Implementation for save chi tiet
            alert('Chức năng lưu chi tiết sẽ được triển khai');
        }

           function exportToExcel() {
            var table = document.querySelector('.table');
            if (table) {
                var wb = XLSX.utils.table_to_book(table, { sheet: "Chi tiết giảng dạy" });

                // Razor biến được nhúng vào đây
                var maTaiGiangDay = "@Model.MaTaiGiangDay";

                XLSX.writeFile(wb, `ChiTietGiangDay_${maTaiGiangDay}.xlsx`);
            }
        }

        function copyTaiGiangDay() {
            if (confirm('Bạn có muốn sao chép tải giảng dạy này?')) {
                // Implementation for copy functionality
                alert('Chức năng sao chép sẽ được triển khai');
            }
        }
    </script>
}