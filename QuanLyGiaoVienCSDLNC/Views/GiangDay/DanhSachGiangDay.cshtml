@model List<QuanLyGiaoVienCSDLNC.Models.ChiTietGiangDay>
@{
    ViewData["Title"] = "Danh sách giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Danh sách giảng dạy</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Quản lý giảng dạy</li>
                        <li class="breadcrumb-item active">Danh sách giảng dạy</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i data-feather="check-circle"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i data-feather="alert-circle"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Filter Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Bộ lọc tìm kiếm</h5>
                    </div>
                    <div class="card-body">
                        <form method="get" asp-action="DanhSachGiangDay">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Giáo viên</label>
                                        <select class="form-select" name="maGV" asp-items="ViewBag.GiaoViens">
                                            <option value="">-- Tất cả giáo viên --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">Năm học</label>
                                        <select class="form-select" name="namHoc" asp-items="ViewBag.NamHocs">
                                            <option value="">-- Tất cả năm học --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 d-flex align-items-end">
                                    <div class="mb-3 w-100">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i data-feather="search"></i> Tìm kiếm
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <div class="mb-3 w-100">
                                        <button type="button" class="btn btn-success w-100" onclick="exportToExcel()">
                                            <i data-feather="download"></i> Xuất Excel
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Statistics Cards -->
                @if (Model?.Any() == true)
                {
                    <div class="row mb-4">
                        <div class="col-xl-3 col-md-6">
                            <div class="card stats-card bg-primary text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">@Model.Count</h4>
                                            <p class="mb-0">Tổng phân công</p>
                                        </div>
                                        <i data-feather="book-open" size="48"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card stats-card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">@Model.Select(x => x.MaGV).Distinct().Count()</h4>
                                            <p class="mb-0">Giáo viên</p>
                                        </div>
                                        <i data-feather="users" size="48"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card stats-card bg-info text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">@Model.Sum(x => x.SoTiet)</h4>
                                            <p class="mb-0">Tổng số tiết</p>
                                        </div>
                                        <i data-feather="clock" size="48"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card stats-card bg-warning text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">@Model.Sum(x => x.SoTietQuyDoi).ToString("F1")</h4>
                                            <p class="mb-0">Giờ quy đổi</p>
                                        </div>
                                        <i data-feather="trending-up" size="48"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Main Table -->
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>Danh sách giảng dạy chi tiết</h5>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-primary me-2">
                                    <i data-feather="list"></i> DS Tải GD
                                </a>
                                <a asp-action="ThongKe" class="btn btn-success">
                                    <i data-feather="bar-chart-2"></i> Thống kê
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model?.Any() == true)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover" id="giangDayTable">
                                    <thead>
                                        <tr>
                                            <th>Mã GV</th>
                                            <th>Giáo viên</th>
                                            <th>Bộ môn</th>
                                            <th>Học phần</th>
                                            <th>Lớp</th>
                                            <th>Năm học</th>
                                            <th>Số tiết</th>
                                            <th>Giờ quy đổi</th>
                                            <th>Ghi chú</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderBy(x => x.GiaoVien?.HoTen).ThenBy(x => x.TaiGiangDay?.TenHocPhan))
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-info">@item.MaGV</span>
                                                </td>
                                                <td>
                                                    <div>
                                                        <h6 class="mb-0">@item.GiaoVien?.HoTen</h6>
                                                        <small class="text-muted">@item.GiaoVien?.Email</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <small>@item.GiaoVien?.BoMon?.TenBM</small>
                                                </td>
                                                <td>
                                                    <div>
                                                        <span class="fw-bold text-primary">@item.TaiGiangDay?.TenHocPhan</span>
                                                        <br>
                                                        <small class="text-muted">@item.TaiGiangDay?.MaTaiGiangDay</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@item.TaiGiangDay?.Lop</span>
                                                    <br>
                                                    <small class="text-muted">@item.TaiGiangDay?.He</small>
                                                </td>
                                                <td>@item.TaiGiangDay?.NamHoc</td>
                                                <td>
                                                    <span class="fw-bold">@item.SoTiet</span> tiết
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">@item.SoTietQuyDoi.ToString("F1")</span>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.GhiChu))
                                                    {
                                                        <small>@item.GhiChu</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">--</small>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Details" asp-route-id="@item.MaTaiGiangDay"
                                                           class="btn btn-primary btn-sm" title="Chi tiết tải GD">
                                                            <i data-feather="eye"></i>
                                                        </a>
                                                        <a asp-controller="GiaoVien" asp-action="Details" asp-route-id="@item.MaGV"
                                                           class="btn btn-info btn-sm" title="Chi tiết giáo viên">
                                                            <i data-feather="user"></i>
                                                        </a>
                                                        <form asp-action="XoaPhanCong" method="post" style="display: inline;">
                                                            <input type="hidden" name="maChiTietGiangDay" value="@item.MaChiTietGiangDay" />
                                                            <input type="hidden" name="maTaiGiangDay" value="@item.MaTaiGiangDay" />
                                                            <button type="submit" class="btn btn-danger btn-sm"
                                                                    onclick="return confirm('Bạn có chắc chắn muốn xóa phân công này?')"
                                                                    title="Xóa phân công">
                                                                <i data-feather="trash-2"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i data-feather="book-open" size="48" class="text-muted mb-3"></i>
                                <h5>Chưa có dữ liệu giảng dạy</h5>
                                <p class="text-muted">
                                    Hãy
                                    <a asp-action="Index">quản lý tải giảng dạy</a>
                                    và phân công giáo viên để bắt đầu.
                                </p>
                            </div>
                        }
                    </div>
                    @if (Model?.Any() == true)
                    {
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-muted">
                                        Hiển thị @Model.Count phân công giảng dạy
                                    </span>
                                </div>
                                <div>
                                    <small class="text-muted">
                                        Lọc theo:
                                        @if (!string.IsNullOrEmpty(ViewBag.MaGV as string))
                                        {
                                            <span class="badge bg-info">Giáo viên</span>
                                        }
                                        @if (!string.IsNullOrEmpty(ViewBag.NamHoc as string))
                                        {
                                            <span class="badge bg-warning">@ViewBag.NamHoc</span>
                                        }
                                        @if (string.IsNullOrEmpty(ViewBag.MaGV as string) && string.IsNullOrEmpty(ViewBag.NamHoc as string))
                                        {
                                            <span class="badge bg-secondary">Tất cả</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        $(document).ready(function() {
            // Set selected values for filters
            $('select[name="maGV"]').val('@ViewBag.MaGV');
            $('select[name="namHoc"]').val('@ViewBag.NamHoc');

            // Initialize feather icons
            feather.replace();

            // Initialize DataTable for better sorting and filtering
            if ($('#giangDayTable tbody tr').length > 0) {
                $('#giangDayTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json"
                    },
                    "pageLength": 25,
                    "order": [[1, "asc"], [3, "asc"]], // Sort by teacher name, then subject
                    "columnDefs": [
                        { "orderable": false, "targets": [9] } // Disable sorting for action column
                    ]
                });
            }
        });

        function exportToExcel() {
            var table = document.getElementById("giangDayTable");
            if (table) {
                var wb = XLSX.utils.table_to_book(table, {sheet:"Danh sách giảng dạy"});

                // Get current filter values for filename
                var maGV = $('select[name="maGV"]').val();
                var namHoc = $('select[name="namHoc"]').val();
                var filename = "DanhSachGiangDay";

                if (maGV) filename += "_" + maGV;
                if (namHoc) filename += "_" + namHoc.replace(/\s+/g, '');
                filename += "_" + new Date().toISOString().split('T')[0];

                XLSX.writeFile(wb, filename + ".xlsx");

                TM.utils.showNotification('Xuất Excel thành công!', 'success');
            } else {
                TM.utils.showNotification('Không có dữ liệu để xuất!', 'warning');
            }
        }
    </script>
}