@model List<QuanLyGiaoVienCSDLNC.Models.TaiGiangDay>
@{
    ViewData["Title"] = "Danh sách tải giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Quản lý tải giảng dạy</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Quản lý giảng dạy</li>
                        <li class="breadcrumb-item active">Danh sách tải GD</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i data-feather="check-circle"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i data-feather="alert-circle"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Filter Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Bộ lọc tìm kiếm</h5>
                    </div>
                    <div class="card-body">
                        <form method="get" asp-action="Index">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">Tìm kiếm</label>
                                        <input type="text" class="form-control" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Tên học phần, lớp...">
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="mb-3">
                                        <label class="form-label">Năm học</label>
                                        <select class="form-select" name="namHoc" asp-items="ViewBag.NamHocs">
                                            <option value="">-- Tất cả --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="mb-3">
                                        <label class="form-label">Hệ đào tạo</label>
                                        <select class="form-select" name="he" asp-items="ViewBag.Hes">
                                            <option value="">-- Tất cả --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">Đối tượng</label>
                                        <select class="form-select" name="maDoiTuong" asp-items="ViewBag.DoiTuongs">
                                            <option value="">-- Tất cả --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <div class="mb-3 w-100">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i data-feather="search"></i> Tìm kiếm
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Statistics Cards -->
                @if (Model?.Any() == true)
                {
                    <div class="row mb-4">
                        <div class="col-xl-3 col-md-6">
                            <div class="card stats-card bg-primary text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">@Model.Count</h4>
                                            <p class="mb-0">Tổng tải GD</p>
                                        </div>
                                        <i data-feather="book-open" size="48"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card stats-card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">@Model.Count(x => x.TrangThai == "Đã phân công")</h4>
                                            <p class="mb-0">Đã phân công</p>
                                        </div>
                                        <i data-feather="user-check" size="48"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card stats-card bg-info text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">@Model.Sum(x => x.SoTinChi)</h4>
                                            <p class="mb-0">Tổng tín chỉ</p>
                                        </div>
                                        <i data-feather="award" size="48"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card stats-card bg-warning text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">@Model.Sum(x => x.SiSo)</h4>
                                            <p class="mb-0">Tổng sinh viên</p>
                                        </div>
                                        <i data-feather="users" size="48"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Main Table -->
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>Danh sách tải giảng dạy</h5>
                            <div>
                                <a asp-action="Create" class="btn btn-primary me-2">
                                    <i data-feather="plus"></i> Thêm tải GD
                                </a>
                                <a asp-action="DanhSachGiangDay" class="btn btn-info me-2">
                                    <i data-feather="list"></i> DS Giảng dạy
                                </a>
                                <a asp-action="ThongKe" class="btn btn-success">
                                    <i data-feather="bar-chart-2"></i> Thống kê
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model?.Any() == true)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã tải GD</th>
                                            <th>Tên học phần</th>
                                            <th>Lớp</th>
                                            <th>Hệ</th>
                                            <th>Sĩ số</th>
                                            <th>Số TC</th>
                                            <th>Năm học</th>
                                            <th>Đối tượng</th>
                                            <th>Trạng thái</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-info">@item.MaTaiGiangDay</span>
                                                </td>
                                                <td>
                                                    <div>
                                                        <h6 class="mb-0">@item.TenHocPhan</h6>
                                                        @if (!string.IsNullOrEmpty(item.GhiChu))
                                                        {
                                                            <small class="text-muted">@item.GhiChu</small>
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@item.Lop</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary">@item.He</span>
                                                </td>
                                                <td>
                                                    <span class="fw-bold">@item.SiSo</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">@item.SoTinChi TC</span>
                                                </td>
                                                <td>@item.NamHoc</td>
                                                <td>
                                                    <small>@item.DoiTuongGiangDay?.TenDoiTuong</small>
                                                </td>
                                                <td>
                                                    @{
                                                        var statusClass = item.TrangThai == "Đã phân công" ? "bg-success" : "bg-warning";
                                                    }
                                                    <span class="badge @statusClass">@item.TrangThai</span>
                                                    @if (item.SoGiaoVienPhanCong > 0)
                                                    {
                                                        <br>
                                                        <small class="text-muted">@item.SoGiaoVienPhanCong GV</small>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Details" asp-route-id="@item.MaTaiGiangDay"
                                                           class="btn btn-primary btn-sm" title="Chi tiết">
                                                            <i data-feather="eye"></i>
                                                        </a>
                                                        <a asp-action="PhanCong" asp-route-id="@item.MaTaiGiangDay"
                                                           class="btn btn-warning btn-sm" title="Phân công">
                                                            <i data-feather="user-plus"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-route-id="@item.MaTaiGiangDay"
                                                           class="btn btn-info btn-sm" title="Chỉnh sửa">
                                                            <i data-feather="edit-2"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.MaTaiGiangDay"
                                                           class="btn btn-danger btn-sm" title="Xóa" data-action="delete">
                                                            <i data-feather="trash-2"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i data-feather="book-open" size="48" class="text-muted mb-3"></i>
                                <h5>Chưa có tải giảng dạy nào</h5>
                                <p class="text-muted">Hãy <a asp-action="Create">thêm tải giảng dạy đầu tiên</a> để bắt đầu quản lý.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        $(document).ready(function() {
            // Set selected values for filters
            $('select[name="namHoc"]').val('@ViewBag.NamHoc');
            $('select[name="he"]').val('@ViewBag.He');
            $('select[name="maDoiTuong"]').val('@ViewBag.MaDoiTuong');

            // Initialize feather icons
            feather.replace();
        });
    </script>
}