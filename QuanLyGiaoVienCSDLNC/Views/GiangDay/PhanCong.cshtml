@model QuanLyGiaoVienCSDLNC.Models.ChiTietGiangDay
@{
    ViewData["Title"] = "Phân công giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var taiGiangDay = ViewBag.TaiGiangDay as QuanLyGiaoVienCSDLNC.Models.TaiGiangDay;
    var chiTietGiangDays = ViewBag.ChiTietGiangDays as List<QuanLyGiaoVienCSDLNC.Models.ChiTietGiangDay> ?? new List<QuanLyGiaoVienCSDLNC.Models.ChiTietGiangDay>();
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Phân công giảng dạy</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Index">Quản lý giảng dạy</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Details" asp-route-id="@Model.MaTaiGiangDay">Chi tiết</a>
                        </li>
                        <li class="breadcrumb-item active">Phân công</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i data-feather="check-circle"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i data-feather="alert-circle"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Thông tin tải giảng dạy -->
                @if (taiGiangDay != null)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5><i data-feather="book-open"></i> Thông tin tải giảng dạy</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="fw-bold" width="40%">Mã tải GD:</td>
                                            <td><span class="badge bg-info">@taiGiangDay.MaTaiGiangDay</span></td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Tên học phần:</td>
                                            <td class="fw-bold text-primary">@taiGiangDay.TenHocPhan</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Lớp:</td>
                                            <td><span class="badge bg-secondary">@taiGiangDay.Lop</span></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="fw-bold" width="40%">Năm học:</td>
                                            <td>@taiGiangDay.NamHoc</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Sĩ số:</td>
                                            <td><span class="fw-bold">@taiGiangDay.SiSo</span> sinh viên</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Số tín chỉ:</td>
                                            <td><span class="badge bg-success">@taiGiangDay.SoTinChi TC</span></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="row">
                    <!-- Form phân công mới -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i data-feather="user-plus"></i> Thêm phân công mới</h5>
                            </div>
                            <div class="card-body">
                                <form asp-action="PhanCong" method="post">
                                    <input type="hidden" asp-for="MaTaiGiangDay" />

                                    <div class="mb-3">
                                        <label asp-for="MaGV" class="form-label">Giáo viên <span class="text-danger">*</span></label>
                                        <select asp-for="MaGV" class="form-select" asp-items="ViewBag.GiaoViens">
                                            <option value="">-- Chọn giáo viên --</option>
                                        </select>
                                        <span asp-validation-for="MaGV" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="SoTiet" class="form-label">Số tiết <span class="text-danger">*</span></label>
                                        <input asp-for="SoTiet" class="form-control" type="number" min="1" max="200" placeholder="Nhập số tiết" />
                                        <span asp-validation-for="SoTiet" class="text-danger"></span>
                                        <div class="form-text">Số tiết phải từ 1 đến 200</div>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="MaNoiDungGiangDay" class="form-label">Nội dung giảng dạy</label>
                                        <input asp-for="MaNoiDungGiangDay" class="form-control" placeholder="Mã nội dung (tùy chọn)" />
                                        <span asp-validation-for="MaNoiDungGiangDay" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                                        <textarea asp-for="GhiChu" class="form-control" rows="3" placeholder="Ghi chú thêm..."></textarea>
                                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                                    </div>

                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="checkConflict" name="checkConflict" value="true" checked>
                                        <label class="form-check-label" for="checkConflict">
                                            Kiểm tra trùng lịch
                                        </label>
                                        <div class="form-text">Hệ thống sẽ kiểm tra xem giáo viên có bị trùng lịch giảng dạy hay không</div>
                                    </div>

                                    <hr>

                                    <div class="d-flex justify-content-between">
                                        <a asp-action="Details" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-secondary">
                                            <i data-feather="arrow-left"></i> Quay lại
                                        </a>
                                        <button type="submit" class="btn btn-success">
                                            <i data-feather="user-plus"></i> Phân công
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Danh sách đã phân công -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i data-feather="users"></i> Danh sách đã phân công (@chiTietGiangDays.Count)</h5>
                            </div>
                            <div class="card-body">
                                @if (chiTietGiangDays.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Giáo viên</th>
                                                    <th>Số tiết</th>
                                                    <th>Quy đổi</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in chiTietGiangDays)
                                                {
                                                    <tr>
                                                        <td>
                                                            <div>
                                                                <small class="fw-bold">@item.GiaoVien?.HoTen</small><br>
                                                                <small class="text-muted">@item.MaGV</small>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-primary">@item.SoTiet</span>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-success">@item.SoTietQuyDoi.ToString("F1")</span>
                                                        </td>
                                                        <td>
                                                            <form asp-action="XoaPhanCong" method="post" style="display: inline;">
                                                                <input type="hidden" name="maChiTietGiangDay" value="@item.MaChiTietGiangDay" />
                                                                <input type="hidden" name="maTaiGiangDay" value="@Model.MaTaiGiangDay" />
                                                                <button type="submit" class="btn btn-danger btn-sm"
                                                                        onclick="return confirm('Xóa phân công này?')"
                                                                        title="Xóa phân công">
                                                                    <i data-feather="trash-2"></i>
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Tổng kết -->
                                    <div class="mt-3">
                                        <div class="row text-center">
                                            <div class="col-4">
                                                <div class="card bg-info text-white">
                                                    <div class="card-body py-2">
                                                        <h6 class="mb-0">@chiTietGiangDays.Count</h6>
                                                        <small>Giáo viên</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="card bg-primary text-white">
                                                    <div class="card-body py-2">
                                                        <h6 class="mb-0">@chiTietGiangDays.Sum(x => x.SoTiet)</h6>
                                                        <small>Tổng tiết</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="card bg-success text-white">
                                                    <div class="card-body py-2">
                                                        <h6 class="mb-0">@chiTietGiangDays.Sum(x => x.SoTietQuyDoi).ToString("F1")</h6>
                                                        <small>Tổng quy đổi</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-4">
                                        <i data-feather="users" size="48" class="text-muted mb-3"></i>
                                        <h6>Chưa có phân công nào</h6>
                                        <p class="text-muted mb-0">Hãy thêm giáo viên để bắt đầu phân công</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Initialize feather icons
            feather.replace();

            // Form validation
            $('form').on('submit', function(e) {
                var maGV = $('#MaGV').val();
                var soTiet = $('#SoTiet').val();

                if (!maGV) {
                    e.preventDefault();
                    $('#MaGV').addClass('is-invalid');
                    TM.utils.showNotification('Vui lòng chọn giáo viên!', 'error');
                    return false;
                }

                if (!soTiet || soTiet < 1 || soTiet > 200) {
                    e.preventDefault();
                    $('#SoTiet').addClass('is-invalid');
                    TM.utils.showNotification('Số tiết phải từ 1 đến 200!', 'error');
                    return false;
                }
            });

            // Real-time validation
            $('#MaGV, #SoTiet').on('change blur', function() {
                $(this).removeClass('is-invalid');

                if ($(this).val()) {
                    $(this).addClass('is-valid');
                }
            });

            // Calculate estimated hours when số tiết changes
            $('#SoTiet').on('input', function() {
                var soTiet = parseInt($(this).val()) || 0;
                var heSo = 1.0; // Default coefficient

                // Get coefficients from tải giảng dạy info if available
                var estimatedHours = soTiet * heSo;

                if (soTiet > 0) {
                    $(this).next('.form-text').html(
                        'Số tiết phải từ 1 đến 200. Ước tính giờ quy đổi: <strong>' +
                        estimatedHours.toFixed(1) + '</strong>'
                    );
                } else {
                    $(this).next('.form-text').html('Số tiết phải từ 1 đến 200');
                }
            });

            // Auto-refresh phân công list mỗi 30 giây
            setInterval(function() {
                // Optional: auto-refresh the assignment list
                console.log('Auto refresh assignments could be implemented here');
            }, 30000);
        });
    </script>
}