@model QuanLyGiaoVienCSDLNC.Models.TaiGiangDay
@{
    ViewData["Title"] = "Chi tiết tải giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var chiTietGiangDays = ViewBag.ChiTietGiangDays as List<QuanLyGiaoVienCSDLNC.Models.ChiTietGiangDay> ?? new List<QuanLyGiaoVienCSDLNC.Models.ChiTietGiangDay>();
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Chi tiết tải giảng dạy</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Index">Quản lý giảng dạy</a>
                        </li>
                        <li class="breadcrumb-item active">Chi tiết</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i data-feather="check-circle"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i data-feather="alert-circle"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Thông tin chính -->
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>Thông tin tải giảng dạy</h5>
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-warning btn-sm">
                                    <i data-feather="edit-2"></i> Chỉnh sửa
                                </a>
                                <a asp-action="PhanCong" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-success btn-sm">
                                    <i data-feather="user-plus"></i> Phân công
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-danger btn-sm" data-action="delete">
                                    <i data-feather="trash-2"></i> Xóa
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="fw-bold" width="40%">Mã tải GD:</td>
                                        <td><span class="badge bg-info">@Model.MaTaiGiangDay</span></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Tên học phần:</td>
                                        <td class="fw-bold text-primary">@Model.TenHocPhan</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Lớp:</td>
                                        <td><span class="badge bg-secondary">@Model.Lop</span></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Hệ đào tạo:</td>
                                        <td><span class="badge bg-primary">@Model.He</span></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Năm học:</td>
                                        <td>@Model.NamHoc</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="fw-bold" width="40%">Sĩ số:</td>
                                        <td><span class="fw-bold">@Model.SiSo</span> sinh viên</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Số tín chỉ:</td>
                                        <td><span class="badge bg-success">@Model.SoTinChi TC</span></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Đối tượng GD:</td>
                                        <td>@Model.DoiTuongGiangDay?.TenDoiTuong</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Thời gian GD:</td>
                                        <td>@Model.ThoiGianGiangDay?.TenThoiGian</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Ngôn ngữ GD:</td>
                                        <td>@Model.NgonNguGiangDay?.TenNgonNgu</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.GhiChu))
                        {
                            <div class="row">
                                <div class="col-12">
                                    <div class="alert alert-info">
                                        <strong>Ghi chú:</strong> @Model.GhiChu
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Thống kê nhanh -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h4>@Model.SoGiaoVienPhanCong</h4>
                                <p class="mb-0">Giáo viên</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h4>@Model.TongSoTiet</h4>
                                <p class="mb-0">Tổng số tiết</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h4>@Model.TongGioQuyDoi.ToString("F1")</h4>
                                <p class="mb-0">Giờ quy đổi</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                @{
                                    var statusClass = Model.TrangThai == "Đã phân công" ? "text-success" : "text-warning";
                                }
                                <h4 class="@statusClass">@Model.TrangThai</h4>
                                <p class="mb-0">Trạng thái</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Danh sách giáo viên được phân công -->
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>Danh sách giáo viên được phân công</h5>
                            <a asp-action="PhanCong" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-success btn-sm">
                                <i data-feather="user-plus"></i> Thêm giáo viên
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (chiTietGiangDays.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã GV</th>
                                            <th>Họ tên</th>
                                            <th>Bộ môn</th>
                                            <th>Số tiết</th>
                                            <th>Tiết quy đổi</th>
                                            <th>Ghi chú</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in chiTietGiangDays)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-info">@item.MaGV</span>
                                                </td>
                                                <td>
                                                    <div>
                                                        <h6 class="mb-0">@item.GiaoVien?.HoTen</h6>
                                                        <small class="text-muted">@item.GiaoVien?.Email</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <small>@item.GiaoVien?.BoMon?.TenBM</small>
                                                </td>
                                                <td>
                                                    <span class="fw-bold">@item.SoTiet</span> tiết
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">@item.SoTietQuyDoi.ToString("F1")</span>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.GhiChu))
                                                    {
                                                        <small>@item.GhiChu</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">--</small>
                                                    }
                                                </td>
                                                <td>
                                                    <form asp-action="XoaPhanCong" method="post" style="display: inline;">
                                                        <input type="hidden" name="maChiTietGiangDay" value="@item.MaChiTietGiangDay" />
                                                        <input type="hidden" name="maTaiGiangDay" value="@Model.MaTaiGiangDay" />
                                                        <button type="submit" class="btn btn-danger btn-sm"
                                                                onclick="return confirm('Bạn có chắc chắn muốn xóa phân công này?')"
                                                                title="Xóa phân công">
                                                            <i data-feather="trash-2"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i data-feather="users" size="48" class="text-muted mb-3"></i>
                                <h5>Chưa có giáo viên nào được phân công</h5>
                                <p class="text-muted">Hãy <a asp-action="PhanCong" asp-route-id="@Model.MaTaiGiangDay">phân công giáo viên</a> để bắt đầu giảng dạy.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Navigation buttons -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i data-feather="arrow-left"></i> Quay lại danh sách
                            </a>
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-warning">
                                    <i data-feather="edit-2"></i> Chỉnh sửa
                                </a>
                                <a asp-action="PhanCong" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-success">
                                    <i data-feather="user-plus"></i> Phân công GV
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        $(document).ready(function() {
            // Initialize feather icons
            feather.replace();
        });
    </script>
}