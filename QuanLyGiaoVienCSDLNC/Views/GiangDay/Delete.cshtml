@model QuanLyGiaoVienCSDLNC.Models.TaiGiangDay
@{
    ViewData["Title"] = "Xóa tải giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Xóa tải giảng dạy</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Index">Quản lý giảng dạy</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="GiangDay" asp-action="Details" asp-route-id="@Model.MaTaiGiangDay">Chi tiết</a>
                        </li>
                        <li class="breadcrumb-item active">Xóa</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5><i data-feather="alert-triangle"></i> Xác nhận xóa tải giảng dạy</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger">
                            <h5><i data-feather="alert-circle"></i> Cảnh báo!</h5>
                            <p class="mb-0">
                                Bạn có chắc chắn muốn xóa tải giảng dạy này?
                                <strong>Hành động này không thể hoàn tác!</strong>
                            </p>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h6>Thông tin tải giảng dạy:</h6>
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="fw-bold" width="40%">Mã tải GD:</td>
                                        <td><span class="badge bg-info">@Model.MaTaiGiangDay</span></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Tên học phần:</td>
                                        <td class="fw-bold text-primary">@Model.TenHocPhan</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Lớp:</td>
                                        <td><span class="badge bg-secondary">@Model.Lop</span></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Hệ đào tạo:</td>
                                        <td><span class="badge bg-primary">@Model.He</span></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Năm học:</td>
                                        <td>@Model.NamHoc</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6>Thông tin khác:</h6>
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="fw-bold" width="40%">Sĩ số:</td>
                                        <td><span class="fw-bold">@Model.SiSo</span> sinh viên</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Số tín chỉ:</td>
                                        <td><span class="badge bg-success">@Model.SoTinChi TC</span></td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Đối tượng GD:</td>
                                        <td>@Model.DoiTuongGiangDay?.TenDoiTuong</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Thời gian GD:</td>
                                        <td>@Model.ThoiGianGiangDay?.TenThoiGian</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Ngôn ngữ GD:</td>
                                        <td>@Model.NgonNguGiangDay?.TenNgonNgu</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.GhiChu))
                        {
                            <div class="row">
                                <div class="col-12">
                                    <h6>Ghi chú:</h6>
                                    <div class="alert alert-info">
                                        @Model.GhiChu
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Kiểm tra phân công -->
                        @if (Model.SoGiaoVienPhanCong > 0)
                        {
                            <div class="alert alert-warning">
                                <h6><i data-feather="alert-triangle"></i> Không thể xóa!</h6>
                                <p class="mb-0">
                                    Tải giảng dạy này đã có <strong>@Model.SoGiaoVienPhanCong giáo viên</strong> được phân công.
                                    Bạn cần xóa tất cả phân công trước khi xóa tải giảng dạy.
                                </p>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <h6><i data-feather="check-circle"></i> Có thể xóa!</h6>
                                <p class="mb-0">
                                    Tải giảng dạy này chưa có giáo viên nào được phân công. Bạn có thể xóa an toàn.
                                </p>
                            </div>
                        }

                        <hr>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <a asp-action="Details" asp-route-id="@Model.MaTaiGiangDay" class="btn btn-secondary">
                                            <i data-feather="arrow-left"></i> Quay lại
                                        </a>
                                        <a asp-action="Index" class="btn btn-outline-secondary">
                                            <i data-feather="list"></i> Danh sách
                                        </a>
                                    </div>
                                    <div>
                                        @if (Model.SoGiaoVienPhanCong == 0)
                                        {
                                            <form asp-action="Delete" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@Model.MaTaiGiangDay" />
                                                <button type="submit" class="btn btn-danger" id="deleteButton">
                                                    <i data-feather="trash-2"></i> Xác nhận xóa
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-danger" disabled title="Không thể xóa vì còn phân công">
                                                <i data-feather="trash-2"></i> Không thể xóa
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        $(document).ready(function() {
            // Initialize feather icons
            feather.replace();

            // Confirm delete with SweetAlert2
            $('#deleteButton').on('click', function(e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Xác nhận xóa',
                    text: 'Bạn có chắc chắn muốn xóa tải giảng dạy "@Model.TenHocPhan"?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Đồng ý xóa',
                    cancelButtonText: 'Hủy bỏ',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Submit form
                        $(this).closest('form').submit();
                    }
                });
            });
        });
    </script>
}