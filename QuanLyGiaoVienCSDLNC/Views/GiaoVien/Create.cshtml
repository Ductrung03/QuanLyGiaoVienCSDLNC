@model QuanLyGiaoVienCSDLNC.Models.GiaoVien
@{
    ViewData["Title"] = "Thêm giáo viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Thêm giáo viên</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item"><a asp-controller="GiaoVien" asp-action="Index">Quản lý giáo viên</a></li>
                        <li class="breadcrumb-item active">Thêm mới</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Thông tin giáo viên</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="HoTen" class="form-label">Họ tên</label>
                                        <input asp-for="HoTen" class="form-control" />
                                        <span asp-validation-for="HoTen" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
                                        <input asp-for="NgaySinh" class="form-control" type="date" />
                                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="GioiTinh" class="form-label">Giới tính</label>
                                        <div class="form-check">
                                            <input asp-for="GioiTinh" class="form-check-input" type="radio" value="true" checked>
                                            <label class="form-check-label">Nam</label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="GioiTinh" class="form-check-input" type="radio" value="false">
                                            <label class="form-check-label">Nữ</label>
                                        </div>
                                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="MaBM" class="form-label">Bộ môn</label>
                                        <select asp-for="MaBM" class="form-select" asp-items="ViewBag.BoMons">
                                            <option value="">-- Chọn bộ môn --</option>
                                        </select>
                                        <span asp-validation-for="MaBM" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="QueQuan" class="form-label">Quê quán</label>
                                        <input asp-for="QueQuan" class="form-control" />
                                        <span asp-validation-for="QueQuan" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                                        <input asp-for="DiaChi" class="form-control" />
                                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="SDT" class="form-label">Số điện thoại</label>
                                        <input asp-for="SDT" class="form-control" />
                                        <span asp-validation-for="SDT" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" type="email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Script {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}