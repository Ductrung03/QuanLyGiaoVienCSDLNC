@model QuanLyGiaoVienCSDLNC.Models.PagedResult<QuanLyGiaoVienCSDLNC.Models.GiaoVien>
@{
    ViewData["Title"] = "Danh sách giáo viên";
    var searchFilter = ViewBag.SearchFilter as QuanLyGiaoVienCSDLNC.Models.SearchFilter;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Quản lý giáo viên</h2>

            <!-- Thông báo -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Bộ lọc tìm kiếm -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Tìm kiếm và lọc</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="SearchText"
                                       value="@(searchFilter?.SearchText)" placeholder="Nhập tên, email, mã GV...">
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="MaKhoa" id="maKhoa">
                                    <option value="">-- Tất cả khoa --</option>
                                    @if (ViewBag.Khoas != null)
                                    {
                                        @foreach (var khoa in ViewBag.Khoas)
                                        {
                                            <option value="@khoa.Value" selected="@(khoa.Selected)">@khoa.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="MaBM" id="maBM">
                                    <option value="">-- Tất cả bộ môn --</option>
                                    @if (ViewBag.BoMons != null)
                                    {
                                        @foreach (var bomon in ViewBag.BoMons)
                                        {
                                            <option value="@bomon.Value" selected="@(bomon.Selected)">@bomon.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="HocVi">
                                    <option value="">-- Tất cả học vị --</option>
                                    @if (ViewBag.HocViList != null)
                                    {
                                        @foreach (var hocvi in ViewBag.HocViList)
                                        {
                                            <option value="@hocvi.Value" selected="@(hocvi.Selected)">@hocvi.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="PageSize">
                                    <option value="10">10/trang</option>
                                    <option value="20" selected>20/trang</option>
                                    <option value="50">50/trang</option>
                                </select>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                            </div>
                        </div>
                        <input type="hidden" name="PageNumber" value="1">
                    </form>
                </div>
            </div>

            <!-- Nút thao tác -->
            <div class="d-flex justify-content-between mb-3">
                <div>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Thêm mới
                    </a>
                    <button type="button" class="btn btn-info" onclick="exportToExcel()">
                        <i class="fas fa-download"></i> Xuất Excel
                    </button>
                </div>
                <div>
                    <span class="badge bg-primary">Tổng: @Model.TotalRecords giáo viên</span>
                </div>
            </div>

            <!-- Bảng danh sách -->
            @if (Model.Data?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAll">
                                </th>
                                <th>Mã GV</th>
                                <th>Họ tên</th>
                                <th>Tuổi</th>
                                <th>Email</th>
                                <th>SĐT</th>
                                <th>Bộ môn</th>
                                <th>Khoa</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="row-checkbox" value="@item.MaGV">
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.MaGV</span>
                                    </td>
                                    <td>
                                        <strong>@item.HoTen</strong><br>
                                        <small class="text-muted">@item.GioiTinhText</small>
                                    </td>
                                    <td>@item.Tuoi tuổi</td>
                                    <td>
                                        <a href="mailto:@item.Email">@item.Email</a>
                                    </td>
                                    <td>
                                        <a href="tel:@item.SDT">@item.SDT</a>
                                    </td>
                                    <td>@item.BoMon?.TenBM</td>
                                    <td>@item.BoMon?.Khoa?.TenKhoa</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.MaGV"
                                               class="btn btn-sm btn-primary" title="Chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.MaGV"
                                               class="btn btn-sm btn-warning" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Statistics" asp-route-id="@item.MaGV"
                                               class="btn btn-sm btn-info" title="Thống kê">
                                                <i class="fas fa-chart-bar"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MaGV"
                                               class="btn btn-sm btn-danger" title="Xóa"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Phân trang -->
                @if (Model.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(1)">Đầu</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(Model.PageNumber - 1)">‹</a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@GetPageUrl(i)">@i</a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(Model.PageNumber + 1)">›</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(Model.TotalPages)">Cuối</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <h5>Không tìm thấy giáo viên nào</h5>
                    <p class="text-muted">Thử thay đổi tiêu chí tìm kiếm hoặc <a asp-action="Create">thêm giáo viên mới</a></p>
                </div>
            }

            <!-- Thao tác hàng loạt -->
            <div id="bulkActions" style="display: none;" class="mt-3">
                <div class="alert alert-info">
                    <span id="selectedCount">0</span> giáo viên đã được chọn
                    <button type="button" class="btn btn-danger btn-sm ms-2" onclick="bulkDelete()">
                        <i class="fas fa-trash"></i> Xóa đã chọn
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetPageUrl(int pageNumber)
    {
        var routeValues = new RouteValueDictionary
            {
                ["SearchText"] = searchFilter?.SearchText,
                ["MaKhoa"] = searchFilter?.MaKhoa,
                ["MaBM"] = searchFilter?.MaBM,
                ["HocVi"] = searchFilter?.HocVi,
                ["HocHam"] = searchFilter?.HocHam,
                ["PageNumber"] = pageNumber,
                ["PageSize"] = searchFilter?.PageSize ?? 20
            };
        return Url.Action("Index", routeValues);
    }
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        $(document).ready(function () {
            // Khoa thay đổi -> load bộ môn
            $('#maKhoa').change(function () {
                var maKhoa = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetBoMonByKhoa")',
                    type: 'GET',
                    data: { maKhoa: maKhoa },
                    success: function (data) {
                        var html = '<option value="">-- Tất cả bộ môn --</option>';
                        $.each(data, function (key, item) {
                            html += '<option value="' + item.maBM + '">' + item.tenBM + '</option>';
                        });
                        $('#maBM').html(html);
                    }
                });
            });

            // Checkbox select all
            $('#selectAll').change(function() {
                $('.row-checkbox').prop('checked', this.checked);
                toggleBulkActions();
            });

            $('.row-checkbox').change(function() {
                var totalCheckboxes = $('.row-checkbox').length;
                var checkedCheckboxes = $('.row-checkbox:checked').length;
                $('#selectAll').prop('checked', checkedCheckboxes === totalCheckboxes);
                toggleBulkActions();
            });

            function toggleBulkActions() {
                var checkedCount = $('.row-checkbox:checked').length;
                if (checkedCount > 0) {
                    $('#bulkActions').show();
                    $('#selectedCount').text(checkedCount);
                } else {
                    $('#bulkActions').hide();
                }
            }
        });

        function exportToExcel() {
            var searchData = {
                SearchText: $('[name="SearchText"]').val(),
                MaKhoa: $('[name="MaKhoa"]').val(),
                MaBM: $('[name="MaBM"]').val(),
                HocVi: $('[name="HocVi"]').val(),
                PageSize: 10000
            };
            var url = '@Url.Action("ExportExcel")' + '?searchData=' + encodeURIComponent(JSON.stringify(searchData));
            window.location.href = url;
        }

        function bulkDelete() {
            var selectedIds = [];
            $('.row-checkbox:checked').each(function() {
                selectedIds.push($(this).val());
            });

            if (selectedIds.length > 0) {
                if (confirm('Bạn có chắc chắn muốn xóa ' + selectedIds.length + ' giáo viên đã chọn?')) {
                    var form = $('<form>').attr({
                        method: 'POST',
                        action: '@Url.Action("BulkDelete")'
                    });

                    form.append($('<input>').attr({
                        type: 'hidden',
                        name: '__RequestVerificationToken',
                        value: $('[name=__RequestVerificationToken]').val()
                    }));

                    $.each(selectedIds, function(i, id) {
                        form.append($('<input>').attr({
                            type: 'hidden',
                            name: 'selectedIds[' + i + ']',
                            value: id
                        }));
                    });

                    $('body').append(form);
                    form.submit();
                }
            }
        }
    </script>
}