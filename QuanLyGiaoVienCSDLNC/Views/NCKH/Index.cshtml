@model QuanLyGiaoVienCSDLNC.DTOs.Common.PagedResultDto<QuanLyGiaoVienCSDLNC.DTOs.NCKH.TaiNCKHListItemDto>
@{
    ViewData["Title"] = "Quản lý Nghiên cứu Khoa học";
    var searchDto = ViewBag.SearchDto as QuanLyGiaoVienCSDLNC.DTOs.NCKH.TaiNCKHSearchDto ?? new QuanLyGiaoVienCSDLNC.DTOs.NCKH.TaiNCKHSearchDto();
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Quản lý NCKH</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Search Form -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Tìm kiếm và lọc</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Index" method="get">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="SearchText">Từ khóa</label>
                                        <input asp-for="@searchDto.SearchText" class="form-control" placeholder="Tìm theo tên công trình..." />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="NamHoc">Năm học</label>
                                        <select asp-for="@searchDto.NamHoc" class="form-control">
                                            <option value="">Tất cả</option>
                                            @foreach (var namHoc in ViewBag.AvailableNamHoc as List<string> ?? new List<string>())
                                            {
                                                <option value="@namHoc">@namHoc</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="MaLoaiNCKH">Loại NCKH</label>
                                        <select asp-for="@searchDto.MaLoaiNCKH" class="form-control" asp-items="ViewBag.LoaiNCKHList as SelectList">
                                            <option value="">Tất cả</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="PageSize">Hiển thị</label>
                                        <select asp-for="@searchDto.PageSize" class="form-control">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <div>
                                            <button type="submit" class="btn btn-primary">
                                                <i data-feather="search"></i> Tìm kiếm
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Danh sách tài NCKH</h5>
                            </div>
                            <div class="col-md-6 text-end">
                                <a asp-action="Create" class="btn btn-primary">
                                    <i data-feather="plus"></i> Thêm mới
                                </a>
                                <a asp-action="ThongKe" class="btn btn-info">
                                    <i data-feather="bar-chart-2"></i> Thống kê
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        @if (Model.Data.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã</th>
                                            <th>Tên công trình</th>
                                            <th>Năm học</th>
                                            <th>Loại NCKH</th>
                                            <th>Số tác giả</th>
                                            <th>Số TG hiện tại</th>
                                            <th>Quy đổi (giờ)</th>
                                            <th>Trạng thái</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Data)
                                        {
                                            <tr>
                                                <td>@item.MaTaiNCKH</td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@item.MaTaiNCKH" class="text-primary">
                                                        @item.TenCongTrinhKhoaHoc
                                                    </a>
                                                </td>
                                                <td>@item.NamHoc</td>
                                                <td>@item.TenLoaiNCKH</td>
                                                <td class="text-center">@item.SoTacGia</td>
                                                <td class="text-center">@item.SoTacGiaHienTai</td>
                                                <td class="text-center">@item.QuyRaGioChuan</td>
                                                <td>
                                                    @if (item.SoTacGiaHienTai >= item.SoTacGia)
                                                    {
                                                        <span class="badge bg-success">Đầy đủ</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">Thiếu TG</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Details" asp-route-id="@item.MaTaiNCKH"
                                                           class="btn btn-sm btn-outline-info" title="Chi tiết">
                                                            <i data-feather="eye"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-route-id="@item.MaTaiNCKH"
                                                           class="btn btn-sm btn-outline-warning" title="Sửa">
                                                            <i data-feather="edit"></i>
                                                        </a>
                                                        <a asp-action="PhanCong" asp-route-id="@item.MaTaiNCKH"
                                                           class="btn btn-sm btn-outline-success" title="Phân công">
                                                            <i data-feather="user-plus"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.MaTaiNCKH"
                                                           class="btn btn-sm btn-outline-danger" title="Xóa">
                                                            <i data-feather="trash-2"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            @if (Model.TotalPages > 1)
                            {
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">
                                        @if (Model.HasPreviousPage)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)"
                                                   asp-route-searchText="@searchDto.SearchText"
                                                   asp-route-namHoc="@searchDto.NamHoc"
                                                   asp-route-maLoaiNCKH="@searchDto.MaLoaiNCKH"
                                                   asp-route-pageSize="@searchDto.PageSize">Trước</a>
                                            </li>
                                        }

                                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                        {
                                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i"
                                                   asp-route-searchText="@searchDto.SearchText"
                                                   asp-route-namHoc="@searchDto.NamHoc"
                                                   asp-route-maLoaiNCKH="@searchDto.MaLoaiNCKH"
                                                   asp-route-pageSize="@searchDto.PageSize">@i</a>
                                            </li>
                                        }

                                        @if (Model.HasNextPage)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)"
                                                   asp-route-searchText="@searchDto.SearchText"
                                                   asp-route-namHoc="@searchDto.NamHoc"
                                                   asp-route-maLoaiNCKH="@searchDto.MaLoaiNCKH"
                                                   asp-route-pageSize="@searchDto.PageSize">Sau</a>
                                            </li>
                                        }
                                    </ul>
                                </nav>

                                <div class="text-center">
                                    <small class="text-muted">
                                        Hiển thị @((Model.PageNumber - 1) * Model.PageSize + 1) - @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords)
                                        của @Model.TotalRecords kết quả
                                    </small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i data-feather="inbox" class="text-muted" style="width: 64px; height: 64px;"></i>
                                <h5 class="text-muted mt-3">Không có dữ liệu</h5>
                                <p class="text-muted">Không tìm thấy tài NCKH nào phù hợp với điều kiện tìm kiếm.</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i data-feather="plus"></i> Thêm tài NCKH đầu tiên
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        // Initialize Feather icons
        feather.replace();
    </script>
}